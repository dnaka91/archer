{
	"name": "Rust",
	"build": {
		"dockerfile": "Dockerfile"
	},
	"runArgs": [
		"--cap-add=SYS_PTRACE",
		"--security-opt",
		"seccomp=unconfined"
	],
	"customizations": {
		"vscode": {
			"settings": {
				"lldb.executable": "/usr/bin/lldb",
				"files.watcherExclude": {
					"**/target/**": true
				},
				"rust-analyzer.checkOnSave.command": "clippy"
			},
			"extensions": [
				"vadimcn.vscode-lldb",
				"rust-lang.rust-analyzer",
				"tamasfe.even-better-toml",
				"serayuzgur.crates"
			]
		}
	},
	"forwardPorts": [
		6831,
		6832,
		14250,
		14268,
		16686,
		4317,
		4318,
		14000
	],
	// "postCreateCommand": "rustc --version",
	"remoteUser": "vscode",
	"features": {
		"git": "os-provided",
		"github-cli": "latest",
		"fish": "latest",
		"node": "lts"
	}
}